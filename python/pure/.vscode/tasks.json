{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Claude YOLO",
      "type": "shell",
      "command": "claude --dangerously-skip-permissions",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "clear": false,
        "focus": true
      }
    },
    {
      "label": "Python: Run",
      "type": "shell",
      "command": "python src/main.py",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Python: Test",
      "type": "shell",
      "command": "pytest",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Python: Lint",
      "type": "shell",
      "command": "pylint src/",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Python: Format",
      "type": "shell",
      "command": "black src/",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Python: Type Check",
      "type": "shell",
      "command": "mypy src/",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    }
  ]
}
