{
  "name": "Python Dev Container",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "anthropic.claude-code",
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-python.debugpy",
        "ms-python.vscode-python-envs",
        "donjayamanne.python-extension-pack",
        "donjayamanne.python-environment-manager",
        "njpwerner.autodocstring",
        "kevinrose.vsc-python-indent",
        "mgesbert.python-path",
        "batisteo.vscode-django",
        "wholroyd.jinja",
        "formulahendry.code-runner",
        "visualstudioexptteam.vscodeintellicode",
        "yzhang.markdown-all-in-one",
        "manuth.markdown-converter",
        "takumii.markdowntable",
        "redhat.vscode-yaml",
        "meezilla.json",
        "eamodio.gitlens",
        "mhutchie.git-graph",
        "streetsidesoftware.code-spell-checker"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "terminal.integrated.defaultProfile.linux": "zsh",
        "terminal.integrated.profiles.linux": {
          "zsh": { "path": "/bin/zsh" },
          "bash": { "path": "/bin/bash" }
        },
        "files.eol": "\n",
        "files.insertFinalNewline": true,
        "files.trimTrailingWhitespace": true,
        "python.defaultInterpreterPath": "/usr/bin/python",
        "python.formatting.provider": "black",
        "python.linting.enabled": true,
        "python.linting.pylintEnabled": true
      }
    }
  },
  "remoteUser": "vscode",
  "mounts": [
    "source=${localWorkspaceFolderBasename}-bashhistory,target=/commandhistory,type=volume",
    "source=${localWorkspaceFolderBasename}-claude-config,target=/home/vscode/.claude,type=volume",
    "source=${localWorkspaceFolderBasename}-gh-config,target=/home/vscode/.config/gh,type=volume"
  ],
  "containerEnv": {
    "CLAUDE_CONFIG_DIR": "/home/vscode/.claude",
    "DEVCONTAINER": "true"
  },
  "postCreateCommand": "git config --global credential.helper '!gh auth git-credential' && python --version && claude --version"
}
